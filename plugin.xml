<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-vdocipherplayer" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>VdoCipherPlayer</name>

    <js-module name="VdoCipherPlayer" src="www/VdoCipherPlayer.js">
        <clobbers target="VdoCipherPlayer"/>
    </js-module>

    <platform name="android">

        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="VdoCipherPlayer">
                <param name="android-package" value="cordova-plugin-vdocipherplayer.VdoCipherPlayer"/>
            </feature>
        </config-file>

        <config-file parent="/*" target="AndroidManifest.xml"></config-file>

        <source-file src="src/android/VdoCipherPlayer.java"
                     target-dir="src/cordova-plugin-vdocipherplayer/VdoCipherPlayer"/>
    </platform>
</plugin>